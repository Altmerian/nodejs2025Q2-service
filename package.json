{
  "name": "home-library",
  "version": "0.0.1",
  "description": "Home Library Service",
  "author": "Altmerian",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --testMatch \"<rootDir>/*.spec.ts\" --noStackTrace --runInBand",
    "test:auth": "cross-env TEST_MODE=auth jest --testPathIgnorePatterns refresh.e2e.spec.ts --noStackTrace --runInBand",
    "test:refresh": "cross-env TEST_MODE=auth jest --testPathPattern refresh.e2e.spec.ts --noStackTrace --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration": "npm run db:clean && npm run schema:sync-test && npm run db:generate && npx prisma generate --schema=./prisma/test/schema.prisma && jest --config jest.integration.config.json --runInBand --forceExit --detectOpenHandles",
    "schema:sync-test": "node scripts/sync-test-schema.js",
    "db:clean": "rimraf prisma/node_modules node_modules/.prisma node_modules/@prisma/client",
    "docker:build": "docker-compose build",
    "docker:build:dev": "docker-compose -f docker-compose.dev.yml build",
    "docker:up": "docker-compose up -d",
    "docker:up:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:down": "docker-compose down",
    "docker:down:dev": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:dev": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:build:prod": "bash -c 'docker build -t ${DOCKER_USERNAME}/home-library-app:latest -t ${DOCKER_USERNAME}/home-library-app:$(date +%Y%m%d-%H%M%S) .'",
    "docker:push": "bash -c 'docker push ${DOCKER_USERNAME}/home-library-app:latest'",
    "docker:push:tagged": "bash -c 'docker push ${DOCKER_USERNAME}/home-library-app --all-tags'",
    "docker:deploy": "npm run docker:build:prod && npm run docker:push:tagged",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "docker scout cves altmerian/home-library-app:latest",
    "security:check": "npm run security:audit; npm run security:scan",
    "security:report": "mkdir -p logs && npm run security:audit > logs/security-audit.log 2>&1; docker scout cves altmerian/home-library-app:latest > logs/docker-scan.log 2>&1; echo 'Security reports generated in logs/ directory'",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.16",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.4.15",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/swagger": "^8.1.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "http-status-codes": "^2.2.0",
    "prisma": "^6.9.0",
    "reflect-metadata": "^0.2.1",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.8",
    "@prisma/client": "^6.9.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
