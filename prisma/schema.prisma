// Home Library Service Prisma Schema
// Using flexible string fields for entity references (no FK constraints)
// This maintains existing event-driven cascading behavior

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  login     String @unique
  password  String
  version   Int
  createdAt BigInt
  updatedAt BigInt
  
  @@map("users")
}

model Artist {
  id     String  @id @default(uuid())
  name   String
  grammy Boolean
  
  @@map("artists")
}

model Album {
  id       String  @id @default(uuid())
  name     String
  year     Int
  artistId String? // Flexible reference - no FK constraint
  
  @@map("albums")
}

model Track {
  id       String  @id @default(uuid())
  name     String
  duration Int
  artistId String? // Flexible reference - no FK constraint
  albumId  String? // Flexible reference - no FK constraint
  
  @@map("tracks")
}

model Favorites {
  id      String   @id @default("singleton")
  artists String[] // Array of artist IDs
  albums  String[] // Array of album IDs
  tracks  String[] // Array of track IDs
  
  @@map("favorites")
}
